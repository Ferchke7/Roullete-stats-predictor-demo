<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

    <Button
            android:text="Загрузить"
            android:layout_width="210dp"
            android:layout_height="0dp" android:id="@+id/load"

            app:layout_constraintTop_toBottomOf="@+id/newOne" android:layout_marginBottom="203dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"/>
    <Button
            android:text="Новый"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/newOne"
            android:layout_marginTop="203dp"
            android:layout_marginBottom="65dp" app:layout_constraintEnd_toEndOf="@+id/load"
            app:layout_constraintBottom_toTopOf="@+id/load" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/load"/>
</androidx.constraintlayout.widget.ConstraintLayout>