<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewCounter">
    <TextView
            android:text="TextView"
            android:layout_width="294dp"
            android:layout_height="55dp" android:id="@+id/scenarioShow"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.463"/>
    <EditText
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextNumberDecimal"
            android:textColorLink="#B14040" android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/infoView"
            android:layout_marginTop="52dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="113dp" android:layout_marginStart="113dp"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:layout_height="50dp" android:id="@+id/button3"
            android:onClick="handleInput"
            android:text="ввод"
            android:layout_width="126dp"
            tools:layout_editor_absoluteY="234dp" tools:layout_editor_absoluteX="209dp"/>
    <TextView
            android:layout_width="343dp"
            android:layout_height="139dp" android:id="@+id/infoView"
            android:text="Данные ввода"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="5sp"/>
    <Button
            android:text="Сохранить"
            android:layout_width="126dp"
            android:layout_height="50dp" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="294dp"
            android:layout_height="55dp" android:id="@+id/arrayInputViewer"
            app:layout_constraintTop_toBottomOf="@+id/button" android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>